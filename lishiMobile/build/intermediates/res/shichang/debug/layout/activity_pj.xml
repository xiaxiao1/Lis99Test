<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:orientation="vertical"
    tools:context=".PJActivity" >
<RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/ls_page_title_height"
        android:background="@color/text_color_blue" >

        <TextView
            android:id="@+id/iv_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
		   android:textSize="15sp"
            android:layout_marginLeft="15dip"
            android:text="取消"
             />
		<LinearLayout 
		    android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:gravity="center"
            >
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="店铺评价" />

        
       </LinearLayout>

		<TextView
		    android:id="@+id/tv_tj"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true"
		    android:layout_centerVertical="true"
		    android:layout_marginRight="15dp"
		   android:textColor="@color/white"
		   android:textSize="15sp"
		    android:text="提交" />

	   </RelativeLayout>
<LinearLayout 
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10dip"
    android:gravity="center">
<ImageView
    android:id="@+id/iv_star11"
    android:layout_width="25dip"
    android:layout_height="25dip"
    android:layout_margin="3dip"
    android:src="@drawable/hwd_large_star_k" />
<ImageView
    android:id="@+id/iv_star12"
    android:layout_width="25dip"
    android:layout_height="25dip"
    android:layout_margin="3dip"
   
    android:src="@drawable/hwd_large_star_k" />
<ImageView
    android:id="@+id/iv_star13"
    android:layout_width="25dip"
    android:layout_height="25dip"
    android:layout_margin="3dip"
   
    android:src="@drawable/hwd_large_star_k" />
<ImageView
    android:id="@+id/iv_star14"
    android:layout_width="25dip"
    android:layout_height="25dip"
    android:layout_margin="3dip"
    
    android:src="@drawable/hwd_large_star_k" />
<ImageView
    android:id="@+id/iv_star15"
    android:layout_width="25dip"
    android:layout_height="25dip"
    android:layout_margin="3dip"
   
    android:src="@drawable/hwd_large_star_k" />
</LinearLayout>

<EditText
    android:id="@+id/et_pj"
    android:layout_width="match_parent"
    android:layout_marginLeft="15dip"
    android:layout_marginRight="15dip"
    android:gravity="top|left"
    android:layout_height="200dip"
    android:hint="写下对这家店的评价..."
    android:textSize="15sp" >
	
</EditText>

