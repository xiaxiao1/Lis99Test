<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/ls_color_F7F6F6"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/ls_page_title_height"
        android:background="@color/text_color_blue" >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/ls_page_home_width"
            android:layout_height="@dimen/ls_page_home_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ls_page_back_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="完善邮箱账号信息"
            android:textColor="@color/white"
            android:textSize="22sp" />
    </RelativeLayout>
    
    <LinearLayout 
       android:layout_width="fill_parent"
            android:layout_height="45dp" 
            android:orientation="horizontal"
            android:gravity="center_vertical">
        <TextView 
            android:id="@+id/ls_improve_nouser_tv"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="没有砾石网邮箱账号"
            android:textSize="14sp"
            android:textColor="@color/ls_color_2acbc2" />
        <TextView 
            android:id="@+id/ls_improve_haveuser_tv"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="有砾石网邮箱账号"
            android:textSize="14sp"
            android:textColor="#999999" />
    </LinearLayout>
    
    <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/ls_color_DEDEDE" />
    
     <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ll_nickname"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/ls_regist_bg_height1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="昵称"
                    android:textColor="#999999"
                    android:textSize="16sp" />

                <com.lis99.mobile.entry.view.CustomEditTextWhite
                	android:id="@+id/ls_regist_nickname"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/ls_regist_bg_height1" />
            </LinearLayout>

            <View
                android:id="@+id/line_nickname"
                android:layout_width="fill_parent"
                android:layout_height="0.6dp"
                android:layout_marginLeft="20dp"
                android:background="@color/ls_color_DEDEDE" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/ls_regist_bg_height1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="邮箱"
                    android:textColor="#999999"
                    android:textSize="16sp" />

                <com.lis99.mobile.entry.view.CustomEditTextWhite
                android:id="@+id/ls_regist_email"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/ls_regist_bg_height1"
                    emailType="@string/password_yes"
                    />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.6dp"
                android:layout_marginLeft="20dp"
                android:background="@color/ls_color_DEDEDE" />
            
             <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/ls_regist_bg_height1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="密码"
                    android:textColor="#999999"
                    android:textSize="16sp" />

                <com.lis99.mobile.entry.view.CustomEditTextWhite
               		android:id="@+id/ls_regist_password"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/ls_regist_bg_height1"
                    password="@string/password_yes" />
            </LinearLayout>
            
	</LinearLayout>
	
     <Button 
         android:id="@+id/ls_submit_bt"
         android:layout_width="fill_parent"
                android:layout_height="@dimen/ls_regist_bt_height"
                android:text="提交"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/ls_login_bt"
                android:textSize="16sp" />

</LinearLayout>
