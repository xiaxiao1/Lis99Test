<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"
    android:paddingBottom="16dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp" >

        <ImageView
            android:id="@+id/headerView"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="16dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@drawable/collection_list_default"
            android:background="@drawable/normal_plain_bg"
            android:padding="1px" />

        <TextView
            android:id="@+id/nameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/headerView"
            android:layout_toRightOf="@+id/headerView"
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            android:gravity="top"
            android:textSize="15sp"
            android:textColor="#666"
            android:layout_marginTop="-2dp"
            android:text="" />

        <TextView
            android:id="@+id/infoView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/nameView"
            android:layout_alignBottom="@+id/headerView"
            android:drawableLeft="@drawable/collection_icon_new"
            android:drawablePadding="5dp"
            android:textSize="12sp"
            android:textColor="#999"
            android:layout_marginBottom="-2dp"
            android:text="" />

        <TextView
            android:id="@+id/timeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textSize="12sp"
            android:textColor="#999"
            android:text="" />
        
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:layout_marginLeft="10dp"
        android:layout_marginRight="13dp">

       <RelativeLayout
            android:layout_width="106dp"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/goodsImageView1"
                android:layout_width="102dp"
                android:layout_height="102dp"
                android:src="@drawable/collection_goods_default"
                android:background="@drawable/normal_plain_bg"
                android:scaleType="fitXY"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="4dp"
           		android:padding="1px" />
            
            <TextView 
                android:id="@+id/saleView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/collection_icon_sale"
                android:textColor="#fff"
                android:textSize="10sp"
                android:text=""
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:layout_marginTop="6dp"/>

            <TextView
                android:id="@+id/goodsPriceView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="#ff7800"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_below="@+id/goodsImageView1"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="4dp"
                android:text="" />

        </RelativeLayout>
        
        <View android:layout_height="1dp"
            android:layout_width="0dp"
            android:layout_weight="1"/>
        
       <RelativeLayout
            android:layout_width="106dp"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/goodsImageView2"
                android:layout_marginLeft="4dp"
                android:scaleType="fitXY"
                android:layout_width="102dp"
                android:layout_height="102dp"
                android:src="@drawable/collection_goods_default"
                android:background="@drawable/normal_plain_bg"
           		android:padding="1px" />
            
            <TextView 
                android:id="@+id/saleView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/collection_icon_sale"
                android:textColor="#fff"
                android:textSize="10sp"
                android:text=""
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:layout_marginTop="6dp"/>

            <TextView
                android:id="@+id/goodsPriceView2"
                android:layout_marginLeft="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="#ff7800"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_below="@+id/goodsImageView2"
                android:layout_marginTop="8dp"
                android:text="" />

        </RelativeLayout>
        
        <View android:layout_height="1dp"
            android:layout_width="0dp"
            android:layout_weight="1"/>
        
        <RelativeLayout
            android:layout_width="106dp"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/goodsImageView3"
                android:scaleType="fitXY"
                android:layout_width="102dp"
                android:layout_height="102dp"
                android:src="@drawable/collection_goods_default"
                android:background="@drawable/normal_plain_bg"
                android:layout_marginLeft="4dp"
           		android:padding="1px" />
            
            <TextView 
                android:id="@+id/saleView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/collection_icon_sale"
                android:textColor="#fff"
                android:textSize="10sp"
                android:text=""
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:layout_marginTop="6dp"/>

            <TextView
                android:id="@+id/goodsPriceView3"
                android:layout_marginLeft="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="#ff7800"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_below="@+id/goodsImageView3"
                android:layout_marginTop="8dp"
                android:text="" />

        </RelativeLayout>
        
      
        
    </LinearLayout>

</LinearLayout>
