<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
  <LinearLayout
        android:id="@+id/layout_left"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/ls_shai_bg"
        android:orientation="vertical" >

        <com.lis99.mobile.entry.view.SlidingMenuView
            android:id="@+id/ls_slidingmenu_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/ls_shai_marginleft"
                        android:layout_marginTop="@dimen/ls_shai_margintop"
                        android:text="晒装备"
                        android:textColor="@color/white"
                        android:textSize="@dimen/ls_shai_text1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/ls_shai_marginleft"
                        android:layout_marginTop="10dp"
                        android:text="记录你户外生活的每一个瞬间"
                        android:textColor="@color/white"
                        android:textSize="@dimen/ls_shai_text2" />
                </LinearLayout>
            </com.lis99.mobile.entry.view.SlidingMenuView>
        </LinearLayout>
        <View
            android:id="@+id/ls_shai_ap_bg"
           android:layout_width="fill_parent"
            android:layout_height="fill_parent"
             />
   <LinearLayout
        android:id="@+id/layout_right"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:background="#00000000"
        android:orientation="vertical" >
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/rl_shai_title"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/ls_page_title_height"
                    android:background="@color/text_color_blue" 
                    android:visibility="invisible">

                    <ImageView
                        android:id="@+id/iv_back"
                        android:layout_width="@dimen/ls_page_home_width"
                        android:layout_height="@dimen/ls_page_home_height"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ls_page_back_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="晒装备"
                        android:textColor="@color/white"
                        android:textSize="22sp" />

                    <ImageView
                        android:id="@+id/iv_paizhao"
                        android:layout_width="@dimen/ls_page_home_width"
                        android:layout_height="@dimen/ls_page_home_height"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/ls_shai_marginright2"
                        android:background="@drawable/ls_shai_paizhao_icon" />

                    <ImageView
                        android:id="@+id/iv_shuaxin"
                        android:layout_width="@dimen/ls_page_home_width"
                        android:layout_height="@dimen/ls_page_home_height"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/ls_shai_marginright1"
                        android:background="@drawable/ls_shai_shuaxin_icon" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/ls_shaitu_content"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" 
                        android:gravity="center">

                         <FrameLayout
                             android:layout_width="fill_parent"
                             android:layout_height="wrap_content"
                             android:orientation="vertical" >

                             <android.support.v4.view.ViewPager
                                 android:id="@+id/cpt_view_pager"
                                 android:layout_width="fill_parent"
                                 android:layout_height="wrap_content"
                                 android:padding="0dip" />

                             <LinearLayout
                                 android:id="@+id/cpt_index_container"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:layout_gravity="center_horizontal|bottom"
                                 android:background="@android:color/transparent"
                                 android:padding="8dip"
                                 tools:ignore="Orientation" />
                         </FrameLayout>

                    </RelativeLayout>
                </LinearLayout> 
            </LinearLayout>
        </LinearLayout>
</RelativeLayout>
