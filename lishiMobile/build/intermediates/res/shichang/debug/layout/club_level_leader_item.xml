<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff">

    <com.lis99.mobile.club.widget.RoundedImageView
        android:id="@+id/roundedImageView1"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/club_icon_header_default"
        app:corner_radius="14dip"
        app:border_color="#e8e8e8"
        app:border_width="1px" />

    <ImageView
        android:id="@+id/vipStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/roundedImageView1"
        android:layout_alignBottom="@+id/roundedImageView1"
        android:layout_marginLeft="-8dp"
        android:src="@drawable/club_icon_v" />
    
    <ImageView
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/club_level_0"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        />
	
    
    
    <TextView
        android:id="@+id/nameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/roundedImageView1"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="16sp"
        android:text="爱丽丝"
        android:singleLine="true"
        android:textColor="#666" />

    <TextView 
        style="@style/wrap_wrap"
        android:id="@+id/tv_club_from"
        android:textColor="@color/text_color_blue"
        android:text="[来自XX俱乐部]"
        android:layout_toLeftOf="@id/addButton"
        android:layout_toRightOf="@id/nameView"
        android:layout_alignBottom="@id/nameView"
        />
    
    <TextView
        android:id="@+id/recentView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameView"
        android:layout_toRightOf="@+id/roundedImageView1"
        android:layout_toLeftOf="@+id/addButton"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="#999"
        android:singleLine="true"
        android:textSize="15sp"
        android:text="22222" />
    
    <View 
        android:background="#f2e4ad"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/recentView"
        android:layout_marginTop="12dp"
		android:layout_marginLeft="10dip"
		android:layout_marginRight="10dip"        
        />

</RelativeLayout>
