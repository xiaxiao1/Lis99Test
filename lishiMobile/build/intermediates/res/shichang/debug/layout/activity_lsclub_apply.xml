<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pull_bg"
    tools:context="${relativePackage}.${activityClass}" >

    <RelativeLayout
        android:id="@+id/titlehead"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/text_color_blue" >

        <RelativeLayout
            android:id="@+id/titleLeft"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            >

            <ImageView
                android:id="@+id/titleLeftImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
				android:layout_centerVertical="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ls_page_back_icon" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/titleRight"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp" >

            <TextView
                android:id="@+id/applyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@color/text_color_blue"
                android:text="提交"
                android:textColor="#fff" />
        </RelativeLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_height" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titlehead"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/pull_bg"
            android:orientation="vertical"
            android:padding="15dp" >
            
            <TextView 
                style="@style/fill_wrap"
                android:textColor="@color/color_text"
                android:text="领队需要您提供如下信息"
                android:textSize="15sp"
                />

            <EditText
                android:layout_marginTop="15dip"
                android:id="@+id/nameView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_bg_club"
                android:hint="真实姓名"
                android:padding="10dip"
                android:singleLine="true"
                android:textColor="#666"
                android:textColorHint="#999"
                android:textSize="15sp" >
            </EditText>

            <EditText
                android:id="@+id/idNumView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:background="@drawable/edit_bg_club"
                android:hint="身份证号"
                android:padding="10dip"
                android:singleLine="true"
                android:textColor="#666"
                android:textColorHint="#999"
                android:textSize="15sp" >
            </EditText>

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:gravity="center"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/radioMan"
                    style="@style/wrap_wrap"
                    android:checked="true"
                    android:gravity="center"
                    android:text="男"
                    android:textColor="#666"
                    android:button="@drawable/club_radio_apply_man"
                    android:layout_marginRight="20dip"
                    android:paddingLeft="10dip"
                     />

                <RadioButton
                    android:id="@+id/radioWoman"
                    style="@style/wrap_wrap"
                    android:gravity="center"
                    android:text="女"
                    android:textColor="#666"
                    android:button="@drawable/club_radio_apply_man"
                    android:paddingLeft="10dip"
                    />
            </RadioGroup>

            <EditText
                android:id="@+id/phoneView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:background="@drawable/edit_bg_club"
                android:hint="手机号"
                android:numeric="integer"
                android:padding="10dip"
                android:singleLine="true"
                android:textColor="#666"
                android:textColorHint="#999"
                android:textSize="15sp" >
            </EditText>

            <EditText
                android:id="@+id/et_telOhter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:background="@drawable/edit_bg_club"
                android:hint="紧急联系电话：区号-固定电话/手机号码"
                android:numeric="integer"
                android:padding="10dip"
                android:singleLine="true"
                android:textColor="#666"
                android:textColorHint="#999"
                android:textSize="15sp" >
            </EditText>

            <EditText
                android:id="@+id/et_QQ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:background="@drawable/edit_bg_club"
                android:hint="QQ"
                android:numeric="integer"
                android:padding="10dip"
                android:singleLine="true"
                android:textColor="#666"
                android:textColorHint="#999"
                android:textSize="15sp" >
            </EditText>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:id="@+id/layoutPeple"
                android:layout_marginTop="15dip"
                 >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="同行人员"
                        android:textColor="#666"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="（包括您在内）"
                        android:textColor="#999"
                        android:textSize="10sp" />
                </LinearLayout>

                <com.lis99.mobile.club.widget.Stepper
                    android:id="@+id/stepper1"
                    android:layout_width="135dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="36dp" >
                </com.lis99.mobile.club.widget.Stepper>
            </LinearLayout>

            <EditText
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:background="@drawable/edit_bg_club"
                android:gravity="center_vertical"
                android:hint="邮寄地址"
                android:maxLines="4"
                android:minLines="4"
                android:padding="10dip"
                android:textColor="#666"
                android:textColorHint="#999"
                android:textSize="15sp" >
            </EditText>

            <Button
                android:id="@+id/btn_address"
                style="@style/fill_wrap"
                android:layout_marginTop="15dip"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/club_apply_city_choose"
                android:drawableRight="@drawable/club_apply_city_choose_dot"
                android:paddingRight="20dip"
                android:text="选择居住城市" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout><!-- From: file:/Users/zhangjie/Work/lishi/Studio/lishi_android_studio/lishiMobile/src/main/res/layout/activity_lsclub_apply.xml -->