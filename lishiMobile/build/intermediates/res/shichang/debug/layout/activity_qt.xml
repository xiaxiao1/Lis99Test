<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QTActivity" >
	
    <RelativeLayout
    		android:id="@+id/rl_title"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/ls_page_title_height"
            android:layout_marginBottom="20dip"
            android:background="@color/text_color_blue" >

           <TextView
                android:id="@+id/iv_home"
                android:layout_width="@dimen/ls_page_home_width"
                android:layout_height="@dimen/ls_page_home_height"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:text="取消" />
			<LinearLayout 
			    android:orientation="horizontal"
			    android:layout_width="wrap_content"
			    android:layout_centerInParent="true"
			    android:gravity="center"
			    android:layout_height="fill_parent">
			    	
			    <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="其他信息错误"
                android:textSize="20sp"
                android:textColor="@color/white" />
			</LinearLayout>

			<TextView
			    android:id="@+id/tv_tj"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentRight="true"
			    android:layout_centerVertical="true"
			    android:textColor="@color/white"
			    android:textSize="16sp"
			    
			    android:layout_marginRight="10dip"
			    android:text="提交" />

        </RelativeLayout>

    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:hint="该商户其他错误信息，请填写在这里"
        android:gravity="top|left"
        android:textSize="12sp"
         >

        
    </EditText>

</LinearLayout><!-- From: file:/Users/zhangjie/Work/lishi/Studio/lishi_android_studio/lishiMobile/src/main/res/layout/activity_qt.xml -->