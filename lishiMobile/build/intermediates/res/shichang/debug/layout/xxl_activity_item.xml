<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/ls_page_title_height"
        android:background="@color/text_color_blue" >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/ls_page_home_width"
            android:layout_height="@dimen/ls_page_home_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ls_page_back_icon" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="新雪丽基金领队评选"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="@dimen/ls_page_home_width"
            android:layout_height="@dimen/ls_page_home_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ls_share_icon1" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/snowbackgroud"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:focusable="true"
            android:focusableInTouchMode="true" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/iv_header_pic"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textview_shape"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/textview_shape"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/wv_content"
                        style="@style/common_black_text"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="13dp"
                        android:layout_marginTop="17dp"
                        android:lineSpacingExtra="5dp" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@+id/bt_hd"
                            style="@style/common_big_blue_text"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_marginBottom="30dp"
                            android:layout_marginLeft="40dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="28dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_shape"
                            android:text="活动细则" />

                        <Button
                            android:id="@+id/bt_jg"
                            style="@style/common_big_blue_text"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_marginBottom="30dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="50dp"
                            android:layout_marginTop="28dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_shape"
                            android:text="评选结果" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="fill_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="7dp"
                    android:weightSum="4" >

                    <Button
                        android:id="@+id/bt_bj"
                        style="@style/common_black_text"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_marginRight="9dp"
                        android:layout_weight="1"
                        android:background="@drawable/textview_shape"
                        android:text="北京" />

                    <Button
                        android:id="@+id/bt_xa"
                        style="@style/common_black_text"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_marginRight="9dp"
                        android:layout_weight="1"
                        android:background="@drawable/textview_shape"
                        android:text="西安" />

                    <Button
                        android:id="@+id/bt_sy"
                        style="@style/common_black_text"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_marginRight="9dp"
                        android:layout_weight="1"
                        android:background="@drawable/textview_shape"
                        android:text="沈阳" />

                    <Button
                        android:id="@+id/bt_cc"
                        style="@style/common_black_text"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:background="@drawable/textview_shape"
                        android:text="长春" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textview_shape"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="13dp"
                        android:layout_marginTop="13dp"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/common_big_black_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="本期评选活动排行" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="right"
                            android:background="@drawable/xxl" />
                    </RelativeLayout>

                    <View
                        android:layout_marginTop="26dp"
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:background="#b1b1b1" />

                    <ListView
                        android:id="@+id/mlistview"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:divider="#b1b1b1"
                        android:dividerHeight="0.1dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_more"
                    style="@style/common_gray_text"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="加载中..." />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout><!-- From: file:/Users/zhangjie/Work/lishi/Studio/lishi_android_studio/lishiMobile/src/main/res/layout/xxl_activity_item.xml -->