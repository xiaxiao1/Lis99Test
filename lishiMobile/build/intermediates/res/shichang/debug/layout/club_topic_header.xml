<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:background="#eee"
              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dip"
        >

        <TextView
            android:id="@+id/titleView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lineSpacingExtra="3dip"
            android:maxLines="2"
            android:text="@string/temp_string_long"
            android:textColor="@color/text_color_blue"
            android:textSize="20sp"
            />

        <RelativeLayout
            style="@style/fill_wrap"
            android:paddingBottom="10dp"
            android:paddingTop="8dp"
            >

            <TextView
                android:id="@+id/clubButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:text="来自【】俱乐部 >"
                android:textColor="#ff7800"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_reply_number"
                style="@style/wrap_wrap"
                android:layout_alignParentRight="true"
                android:drawableLeft="@drawable/club_detail_reply_number"
                android:drawablePadding="8dip"
                android:text=""
                android:textColor="#999"
                android:textSize="12sp"
                />

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e8e8e8"/>

        <include
            android:id="@+id/include1"
            layout="@layout/club_topic_topview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/contentView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="5dip"
            android:text="@string/temp_string_long"
            android:textColor="#666"
            android:textIsSelectable="true"
            android:textSize="15sp"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/contentImageView"
                style="@style/fill_wrap"
                android:layout_marginTop="10dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/club_topic_default"
                />

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_load"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/load_image_temp_bg"
                />

        </RelativeLayout>

        <Button
            android:id="@+id/actionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:background="@drawable/club_topic_login_bg"
            android:visibility="gone"/>

        <include
            layout="@layout/club_topic_reply"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/reply_height"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="10dip"
            />
    </LinearLayout>

    <View
        style="@style/fill_wrap"
        android:layout_height="1px"
        android:background="@color/color_1px_stroke"
        />
</LinearLayout><!-- From: file:/Users/zhangjie/Work/lishi/Studio/lishi_android_studio/lishiMobile/src/main/res/layout/club_topic_header.xml -->