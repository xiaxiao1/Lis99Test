<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pull_bg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_title"
        style="@style/wrap_wrap"
        android:layout_gravity="center"
        android:layout_margin="@dimen/ten" 
        android:src="@drawable/equip_appraice_title"
        />

    <View 
        style="@style/fill_wrap"
        android:layout_height="1px"
        android:background="@color/color_1px_stroke"
        android:id="@+id/view_line"
        />
    
    <LinearLayout
        style="@style/fill_wrap"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/five" >

        <LinearLayout
            style="@style/fill_wrap"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" 
            android:id="@+id/layout1"
            android:padding="5dip"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <com.lis99.mobile.club.widget.RoundedImageView
                android:id="@+id/iv_icon1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/appraice_size"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:border_color="#e8e8e8"
                app:border_width="0px"
                app:corner_radius="3dip" />

                <ImageView
                    android:id="@+id/iv_load"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/load_image_temp_bg"
                    />

            </RelativeLayout>

            <TextView 
                android:layout_marginTop="@dimen/five"
                style="@style/fill_wrap"
                android:maxLines="3"
                android:minLines="3"
                android:ellipsize="end"
                android:textColor="@color/color_six"
                android:id="@+id/tv_title1"
                android:text="@string/temp_string_long"
                />
            
        </LinearLayout>
        
        <LinearLayout
            style="@style/fill_wrap"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" 
            android:id="@+id/layout2"
            android:padding="5dip"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <com.lis99.mobile.club.widget.RoundedImageView
                android:id="@+id/iv_icon2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/appraice_size"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:border_color="#e8e8e8"
                app:border_width="0px"
                app:corner_radius="3dip" />

                <ImageView
                    android:id="@+id/iv_load1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/load_image_temp_bg"
                    />

            </RelativeLayout>
            
            <TextView 
                android:layout_marginTop="@dimen/five"
                style="@style/fill_wrap"
                android:maxLines="3"
                android:minLines="3"
                android:ellipsize="end"
                android:textColor="@color/color_six"
                android:id="@+id/tv_title2"
                android:text="@string/temp_string_long"
                />
            
        </LinearLayout>
        
    </LinearLayout>

</LinearLayout><!-- From: file:/Users/zhangjie/Work/lishi/Studio/lishi_android_studio/lishiMobile/src/main/res/layout/equip_appraise.xml -->