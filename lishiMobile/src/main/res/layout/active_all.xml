<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/pull_bg"
    >

    <include
        android:id="@+id/include1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        layout="@layout/activity_title" />


    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height"
        android:orientation="horizontal"
        android:background="@drawable/active_all_tab"
        android:gravity="center_vertical"
        android:id="@+id/bottombar"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/layout_tab_data"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部日期"
                android:id="@+id/tv_data"
                android:textColor="@color/white"
                android:layout_marginRight="8dip"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/active_all_dot_select"
                android:id="@+id/iv_data"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/layout_tab_city"
            >

            <TextView
                android:layout_width="80dip"
                android:layout_height="wrap_content"
                android:text="全部集合地"
                android:textColor="@color/white"
                android:singleLine="true"
                android:ellipsize="end"
                android:id="@+id/tv_city"
                android:layout_marginRight="8dip"
                android:gravity="center_horizontal"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/active_all_dot_select"
                android:id="@+id/iv_city"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/layout_tab_type"
            >

            <TextView
                android:layout_width="80dip"
                android:layout_height="wrap_content"
                android:text="项目"
                android:textColor="@color/white"
                android:singleLine="true"
                android:ellipsize="end"
                android:id="@+id/tv_type"
                android:layout_marginRight="8dip"
                android:gravity="center_horizontal"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/active_all_dot_select"
                android:id="@+id/iv_type"
                />

        </LinearLayout>


    </LinearLayout>

    <FrameLayout
        android:layout_below="@id/include1"
        android:layout_above="@id/bottombar"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


    <com.lis99.mobile.entry.view.PullToRefreshView
        android:id="@+id/pull_refresh_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:orientation="vertical"
        >

        <ListView
            style="@style/listViewStyle"
            android:background="@color/pull_bg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:dividerHeight="0px"
            android:divider="@null"
            android:id="@+id/list"
            ></ListView>

    </com.lis99.mobile.entry.view.PullToRefreshView>

    <ListView
        style="@style/listViewStyle"
        android:id="@+id/list_city"
        >

    </ListView>

    <!--<include-->
        <!--android:layout_width="fill_parent"-->
        <!--/>-->

    </FrameLayout>

</RelativeLayout>