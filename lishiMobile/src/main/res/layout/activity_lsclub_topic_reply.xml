<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <RelativeLayout
        android:id="@+id/titlehead"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/text_color_blue"
        android:gravity="center_vertical" >

        <RelativeLayout
            android:id="@+id/titleLeft"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
             >

            <ImageView
                android:id="@+id/titleLeftImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ls_page_back_icon" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/titleRight"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp" >

            <TextView
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@color/text_color_blue"
                android:text="发布"
                android:textColor="#fff" />
        </RelativeLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@id/titleRight"
            android:layout_toRightOf="@id/titleLeft"
            android:gravity="center"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/temp_string_long"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titlehead"
        android:orientation="vertical"
        android:background="@color/white"
         >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="15dp" >

            <include
                android:id="@+id/include"
                layout="@layout/club_reply_view" />

            <EditText
                android:id="@+id/bodyView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dip"
                android:background="#fff"
                android:gravity="top"
                android:hint="说点什么吧..."
                android:textColor="#666"
                android:textSize="15sp" >
            </EditText>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/imagePanel"
            android:layout_width="89dp"
            android:layout_height="89dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="9dp"
                android:layout_marginTop="9dp"
                android:scaleType="fitXY"
                android:src="@drawable/albums_bg" />

            <Button
                android:id="@+id/delButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/club_icon_image_del"
                 />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/club_reply_chose_image_bg"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/addImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:drawableLeft="@drawable/club_reply_chose_image"
                android:background="@null"
                android:text="添加图片"
                android:drawablePadding="5dip"
                android:textColor="#c1c1c1"
                android:onClick="onClick" />
            
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>