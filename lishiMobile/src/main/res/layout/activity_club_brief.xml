<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pull_bg"
    tools:context="${relativePackage}.${activityClass}" >


    <ScrollView
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:id="@+id/scroll"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dip"
                 >
                
                <LinearLayout 
                    style="@style/fill_fill"
                    android:orientation="vertical"
                    >
                    
                    <View 
                        style="@style/fill_fill"
                        android:layout_weight="1"
                        android:background="#29ca62"
                        />
                    
                    <View 
                        style="@style/fill_fill"
                        android:layout_weight="1"
                        android:background="#29ca62"
                        />
                    
                </LinearLayout>

                <com.lis99.mobile.club.widget.RoundedImageView
                    android:background="@drawable/club_ditail_head_bg"
                    android:id="@+id/roundedImageView1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/club_icon_header_default"
                    app:corner_radius="37dp"
                    app:border_color="#e8e8e8"
        			app:border_width="1px" 
        			android:layout_centerInParent="true"
                    android:padding="3dp"
        			/>

                <TextView
                    android:id="@+id/nameView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/roundedImageView1"
                    android:layout_centerHorizontal="true"
                    android:singleLine="true"
                    android:text="硬汉连"
                    android:textColor="#fff"
                    android:textSize="17sp" />

            </RelativeLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="13dp" >

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="所在地区"
                        android:textColor="@color/text_color_blue" />


                        <TextView
                            android:layout_marginLeft="13dp"
                        android:id="@+id/addressView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/temp_string"
                        android:textColor="#666" />
                        
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#eee"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:paddingLeft="13dp"
                        android:paddingRight="13dp"
                        >

                        <TextView
                            android:layout_centerVertical="true"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="类型"
                            android:textColor="@color/text_color_blue"
                            android:id="@+id/tv_style"
                            />

                        <TextView
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/tv_style"
                            android:layout_marginLeft="13dp"
                            android:id="@+id/sportView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="@string/temp_string"
                            android:textColor="#666" />

                    </RelativeLayout>



                    

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#eee"
                    android:layout_marginRight="13dp"
                    android:layout_marginLeft="13dp"
                    />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    >

                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="创立时间"
                        android:textColor="@color/text_color_blue"
                        android:id="@+id/tv_date"
                        />

                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_date"
                        android:layout_marginLeft="13dp"
                        android:id="@+id/timeView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/temp_string"
                        android:textColor="#666" />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#eee"
                    android:layout_marginRight="13dp"
                    android:layout_marginLeft="13dp"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="13dp"
                    >

                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="创始人"
                        android:textColor="@color/text_color_blue"
                        android:id="@+id/tv_create"
                         />


                    <com.lis99.mobile.club.widget.RoundedImageView
                        android:layout_toRightOf="@id/tv_create"
                        android:layout_marginLeft="13dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/founderImageView"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ls_nologin_header_icon"
                        app:corner_radius="@dimen/user_header_corner_radius"
                        app:border_color="#e8e8e8"
                        app:border_width="1px" />


                    <ImageView
                        android:id="@+id/vipStar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@id/founderImageView"
                        android:layout_alignBottom="@id/founderImageView"
                        android:layout_marginLeft="-8dp"
                        android:src="@drawable/club_icon_v" />

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/founderImageView"
                        android:id="@+id/founderView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/temp_string"
                        android:textColor="#666"
                        android:textSize="12sp"
                        android:layout_centerVertical="true"
                        />
                    
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#eee"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingLeft="13dp"
                    android:paddingTop="10dp" >

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="领队"
                        android:textColor="@color/text_color_blue" 
                        android:id="@+id/tv_leader"
                        />

                    <com.lis99.mobile.view.MyListView
                        android:layout_toRightOf="@id/tv_leader"
                        android:id="@+id/listView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:background="#fff"
						style="@style/listViewStyle"
                        android:dividerHeight="0px"
                        android:divider="@null"
                         >
                    </com.lis99.mobile.view.MyListView>
                    
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#eee"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:paddingBottom="10dp"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:paddingTop="10dp" >

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="简介"
                        android:textColor="@color/text_color_blue"
                         />

                    <TextView
                        android:id="@+id/descView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="13dp"
                        android:text="@string/temp_string_long"
                        android:lineSpacingExtra="5dip"
                        android:textColor="#666"
                         />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#e8e8e8" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    
    <include
        android:id="@+id/include1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        layout="@layout/activity_title"
        />

</RelativeLayout>