<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}"
    android:background="@color/pull_bg" >
    


    <RelativeLayout
        android:id="@+id/buttonPanel"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/club_detail_bottom_bar_bg"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">

        <Button
            android:layout_marginTop="3dp"
            android:id="@+id/publishButton"
            android:layout_width="70dp"
            android:layout_height="15dp"
            android:background="@drawable/btn_publish_new"
            android:onClick="onClick"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>


    <com.lis99.mobile.entry.view.PullToRefreshView
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/pull_refresh_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:orientation="vertical"
        android:layout_above="@+id/buttonPanel">


        <ListView
            android:background="@color/pull_bg"
            android:id="@+id/listView"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:listSelector="#00000000"
            >
        </ListView>

    </com.lis99.mobile.entry.view.PullToRefreshView>

    
    <include
        android:id="@+id/include1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        layout="@layout/activity_title" />
    
    <LinearLayout
        android:id="@+id/topPanel1"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_below="@id/include1"
         >

        <RelativeLayout
            android:id="@+id/allPanel1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClick" >

            <TextView
                android:id="@+id/allView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="讨论区"
                android:textColor="@color/text_color_green"
                android:textSize="15sp" />

            <View
                android:id="@+id/allLine1"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="@color/text_color_green" />
        </RelativeLayout>
        
        
        <RelativeLayout
            android:id="@+id/eventPanel1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClick" >

            <TextView
                android:id="@+id/eventView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="活动"
                android:textColor="#666"
                android:textSize="15sp" />

            <View
                android:id="@+id/eventLine1"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="@color/text_color_green" />
        </RelativeLayout>

       
    </LinearLayout>
	<View
	    android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/topPanel1"
        android:background="@color/color_1px_stroke" />
    
    

</RelativeLayout>