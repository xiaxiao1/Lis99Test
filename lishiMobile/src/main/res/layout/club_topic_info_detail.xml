<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
                android:background="@color/white"
    >


    <include
        android:id="@+id/include1"
        layout="@layout/activity_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>

    <include
        layout="@layout/list_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btn_lf"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/club_detail_tab_bg_lf"
            android:text="活动介绍"
            android:textColor="@color/text_color_green"
            android:textSize="16sp"
            />

        <Button
            android:id="@+id/btn_rg"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/club_detail_tab_bg_rg"
            android:text="具体行程"
            android:textColor="@color/color_nine"
            android:textSize="16sp"
            />

    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        >

        <ListView
            android:visibility="gone"
            android:id="@+id/list"
            style="@style/listViewStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:dividerHeight="0px"
            />

        <ScrollView
            style="@style/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:divider="@drawable/club_topic_line"
                android:showDividers="middle|end"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="集合时间"
                        android:textColor="@color/text_color_black"
                        />


                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="2015.12.25 13:30"
                        android:textColor="@color/text_color_black"
                        />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/layout_location"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="集合地点"
                        android:textColor="@color/text_color_black"
                        />

                    <ImageView
                        android:id="@+id/dot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/club_info_dot_right"
                        />

                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@id/dot"
                        android:text="地铁5号线"
                        android:textColor="@color/text_color_black"
                        />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系方式"
                        android:textColor="@color/text_color_black"
                        />


                    <TextView
                        android:id="@+id/tv_tel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="@string/temp_string"
                        android:textColor="@color/text_color_black"
                        />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/layout_journey"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="具体行程"
                        android:textColor="@color/text_color_black"
                        />

                    <ImageView
                        android:id="@+id/iv_journey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/club_info_dot_up"
                        />

                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_journey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_black"
                    android:text="@string/temp_string"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:drawableBottom="@color/color_eee"
                    />



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="活动人数"
                        android:textColor="@color/text_color_black"
                        />


                    <TextView
                        android:id="@+id/tv_join_Num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="@string/temp_string"
                        android:textColor="@color/text_color_black"
                        />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/layout_equip"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="装备建议"
                        android:textColor="@color/text_color_black"
                        />

                    <ImageView
                        android:id="@+id/iv_equip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/club_info_dot_down"
                        />

                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_equip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_black"
                    android:text="@string/temp_string"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    />


                <RelativeLayout
                    android:id="@+id/layout_price"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="费用说明"
                        android:textColor="@color/text_color_black"
                        />

                    <ImageView
                        android:id="@+id/iv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/club_info_dot_down"
                        />

                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_black"
                    android:text="@string/temp_string"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    />


                <RelativeLayout
                    android:id="@+id/layout_readme"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="免责声明"
                        android:textColor="@color/text_color_black"
                        />

                    <ImageView
                        android:id="@+id/iv_readme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/club_info_dot_down"
                        />

                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_readme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_black"
                    android:text="@string/temp_string"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    />


                <RelativeLayout
                    android:id="@+id/layout_safely"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="注意事项"
                        android:textColor="@color/text_color_black"
                        />

                    <ImageView
                        android:id="@+id/iv_safely"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/club_info_dot_down"
                        />

                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_safely"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_black"
                    android:text="@string/temp_string"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    />


            </LinearLayout>
        </ScrollView>

    </FrameLayout>


</LinearLayout>