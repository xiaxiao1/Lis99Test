<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}"
    android:background="@color/pull_bg"
    android:id="@+id/layoutMain"

     >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:id="@+id/view_reference"
        android:visibility="invisible"
        />

    <RelativeLayout
        android:id="@+id/replyTopicButton"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="#eee"
        android:paddingLeft="13dp"
        android:paddingRight="13dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:background="@drawable/normal_bg"
            android:drawableLeft="@drawable/club_icon_pen"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="#999"
            android:textSize="12sp"
            android:text="快速回复" />
    </RelativeLayout>

    <com.lis99.mobile.entry.view.PullToRefreshView
        android:id="@+id/pull_refresh_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/replyTopicButton"
        android:layout_below="@+id/view_reference"
        android:background="@null"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/listView"
            android:scrollbars="none"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:cacheColorHint="#00000000"
            android:divider="@color/pull_bg"
            android:dividerHeight="8dp"
            android:listSelector="#00000000" >
        </ListView>
    </com.lis99.mobile.entry.view.PullToRefreshView>

    <include
        android:id="@+id/include2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        layout="@layout/club_topic_replay_panel"
        android:visibility="gone" />

    <include
        android:id="@+id/include1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        layout="@layout/activity_title" />

</RelativeLayout>