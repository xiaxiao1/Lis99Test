<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="5dip"
              android:orientation="vertical"
              android:paddingLeft="10dip"
              android:paddingRight="10dip"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="俱乐部"
        android:textColor="@color/text_color_blue"
        android:id="@+id/tv_club_title"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="10dip"
        />



    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/color_1px_stroke"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <com.lis99.mobile.club.widget.RoundedImageView
                android:id="@+id/roundedImageView"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10dip"
                android:layout_marginRight="15dip"
                android:layout_marginTop="10dip"
                android:scaleType="fitXY"
                android:src="@drawable/club_icon_header_default"
                app:border_color="#eeeeee"
                app:border_width="1px"
                app:corner_radius="28dp"
                />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/temp_string_long"
                    android:textSize="16sp"
                    android:textColor="@color/color_six"
                    />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dip"
                    >

                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/search_location"
                        android:drawablePadding="5dip"
                        android:text="@string/temp_string"
                        android:textColor="@color/color_nine"
                        android:textSize="12sp"
                        />

                    <TextView
                        android:id="@+id/tv_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dip"
                        android:drawableLeft="@drawable/search_label"
                        android:drawablePadding="5dip"
                        android:text="@string/temp_string"
                        android:textColor="@color/color_nine"
                        android:textSize="12sp"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>

