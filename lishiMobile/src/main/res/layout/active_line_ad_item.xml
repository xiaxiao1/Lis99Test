<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="110dp"
        android:layout_height="130dp"
        android:layout_margin="5dip"
        >

        <com.lis99.mobile.club.widget.RoundedImageView
            android:layout_marginLeft="1px"
            android:layout_marginRight="1px"
            android:id="@+id/iv_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/choiceness_height"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:border_width="0px"
            app:corner_radius="5dip"
            />

        <ImageView
            android:layout_centerInParent="true"
            android:id="@+id/iv_load"
            android:src="@drawable/load_image_temp_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/active_line_ad_item"
            android:layout_alignBottom="@id/iv_bg"
            android:alpha="0.95"
            >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/temp_string"
            android:textColor="#525252"
            android:layout_centerInParent="true"
            android:id="@+id/tv_name"
            />

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>