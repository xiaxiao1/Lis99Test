<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="5dip"
              android:background="@drawable/search_list_bg"
              android:orientation="vertical"
              android:padding="10dip"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="话题"
        android:textColor="@color/text_color_blue"
        android:layout_marginBottom="10dip"
        />


    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/color_1px_stroke"
            />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="70dip"
            android:orientation="horizontal"
            >


            <TextView
                android:layout_marginTop="10dip"
                android:id="@+id/tv_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/temp_string_long"
                android:textSize="16sp"
                android:textColor="@color/color_six"
                />

            <TextView
                android:layout_below="@id/tv_title"
                android:layout_marginTop="8dip"
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/temp_string"
                android:textColor="@color/color_nine"
                android:textSize="12sp"
                />

            <TextView
                android:layout_alignTop="@id/tv_location"
                android:layout_alignParentRight="true"
                android:id="@+id/tv_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/temp_string"
                android:textColor="@color/color_nine"
                android:textSize="12sp"
                />

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/color_1px_stroke"
            />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="70dip"
            android:orientation="horizontal"
            >


            <TextView
                android:layout_marginTop="10dip"
                android:id="@+id/tv_title1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/temp_string_long"
                android:textSize="16sp"
                android:textColor="@color/color_six"
                />

            <TextView
                android:layout_below="@id/tv_title1"
                android:layout_marginTop="8dip"
                android:id="@+id/tv_location1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/temp_string"
                android:textColor="@color/color_nine"
                android:textSize="12sp"
                />

            <TextView
                android:layout_alignTop="@id/tv_location1"
                android:layout_alignParentRight="true"
                android:id="@+id/tv_label1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/temp_string"
                android:textColor="@color/color_nine"
                android:textSize="12sp"
                />

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/color_1px_stroke"
            />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="70dip"
            android:orientation="horizontal"
            >


            <TextView
                android:layout_marginTop="10dip"
                android:id="@+id/tv_title2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/temp_string_long"
                android:textSize="16sp"
                android:textColor="@color/color_six"
                />

            <TextView
                android:layout_below="@id/tv_title2"
                android:layout_marginTop="8dip"
                android:id="@+id/tv_location2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/temp_string"
                android:textColor="@color/color_nine"
                android:textSize="12sp"
                />

            <TextView
                android:layout_alignTop="@id/tv_location2"
                android:layout_alignParentRight="true"
                android:id="@+id/tv_label2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/temp_string"
                android:textColor="@color/color_nine"
                android:textSize="12sp"
                />

        </RelativeLayout>

    </LinearLayout>





    <LinearLayout
        android:id="@+id/layout_search_more"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/color_1px_stroke"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/search_icon_more"
            android:drawablePadding="5dip"
            android:padding="5dip"
            android:text="搜索更多话题"
            android:textColor="@color/color_six"
            android:layout_marginTop="10dip"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_search_nothing"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/color_1px_stroke"
            />

        <TextView
            android:id="@+id/tv_topic_nothing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="15dip"
            android:text="没有“砾石”相关的话题"
            android:textColor="@color/color_six"
            android:layout_marginTop="10dip"
            />

    </LinearLayout>


</LinearLayout>

