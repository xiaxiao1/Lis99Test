<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/ls_color_F7F6F6"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/ls_page_title_height"
        android:background="@color/text_color_blue" >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/ls_page_home_width"
            android:layout_height="@dimen/ls_page_home_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ls_page_back_icon" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="新雪丽基金领队评选结果"
            android:textColor="@color/white"
            android:textSize="22sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/snowbackgroud"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="7dp"
            android:weightSum="4" >

            <Button
                android:id="@+id/bt_bj"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginRight="9dp"
                android:layout_weight="1"
                android:background="@drawable/textview_shape"
                android:text="北京"
                android:textColor="#4b4b4b"
                android:textSize="22sp" />

            <Button
                android:id="@+id/bt_xa"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginRight="9dp"
                android:layout_weight="1"
                android:background="@drawable/textview_shape"
                android:text="西安"
                android:textColor="#4b4b4b"
                android:textSize="22sp" />

            <Button
                android:id="@+id/bt_sy"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginRight="9dp"
                android:layout_weight="1"
                android:background="@drawable/textview_shape"
                android:text="沈阳"
                android:textColor="#4b4b4b"
                android:textSize="22sp" />

            <Button
                android:id="@+id/bt_cc"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/textview_shape"
                android:text="长春"
                android:textColor="#4b4b4b"
                android:textSize="22sp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="17dp"
            android:background="@drawable/button_shape" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:paddingBottom="11dp"
                android:paddingLeft="22dp"
                android:paddingRight="22dp"
                android:paddingTop="11dp"
                android:text="2014年8月第一期"
                android:textColor="@color/gray2"
                android:textSize="18sp" />
        </FrameLayout>

        <ListView
            android:id="@+id/mlistview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp" >
        </ListView>
    </LinearLayout>

</LinearLayout>