<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <com.lis99.mobile.club.widget.RoundedImageView
        android:layout_centerVertical="true"
        android:id="@+id/roundedImageView1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ls_nologin_header_icon"
        android:scaleType="fitXY"
        app:corner_radius="5dp"
        app:border_color="#e8e8e8"
        app:border_width="1px"/>

        <TextView
            android:gravity="top"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/roundedImageView1"
        android:id="@+id/nameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="12sp"
        android:textColor="#666"
        android:text="@string/temp_string"
         />

    <ImageView
        android:id="@+id/vipStar"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_alignRight="@id/roundedImageView1"
        android:layout_alignBottom="@+id/roundedImageView1"
        android:layout_marginLeft="-8dp"
        android:src="@drawable/club_icon_v" />

    <Button
        style="@style/wrap_wrap"
        android:layout_alignParentRight="true"
        android:id="@+id/btn_attention"
        android:background="@drawable/friends_no_attention"
        android:layout_centerVertical="true"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/roundedImageView1"
        android:layout_alignBottom="@id/roundedImageView1"
        android:layout_toLeftOf="@id/btn_attention"
        android:gravity="center_vertical"
        >

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_tag_floor"
            android:src="@drawable/club_tier_master"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_moderator"
            android:src="@drawable/moderator_icon"
            android:layout_marginLeft="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:id="@+id/tv_user_tag3"
            android:background="@drawable/topic_supper_tag3"
            android:layout_marginLeft="5dp"
            android:textSize="8sp"
            android:text="人要地人地要在"
            android:textColor="@color/white"
            android:gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:id="@+id/tv_user_tag4"
            android:background="@drawable/topic_supper_tag4"
            android:layout_marginLeft="5dp"
            android:textSize="8sp"
            android:text="人要地人地要在"
            android:textColor="@color/white"
            android:gravity="center"
            />

    </LinearLayout>


</RelativeLayout>
