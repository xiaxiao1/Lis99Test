<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">



    <include
        android:id="@+id/include1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        layout="@layout/activity_title_new" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_ok"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/pull_bg"
        >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:gravity="center"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_pay_state"
                android:textColor="@color/color_six"
                android:text="支付成功"
                android:textSize="16sp"
                />

            <ImageView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pay_ok_img"
                android:id="@+id/iv_img"
                />

            <TextView
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_content"
                android:textColor="@color/color_six"
                android:textSize="12sp"
                android:text="希望您玩得愉快\n如果您需要帮助 请联系010-53525135"
                android:lineSpacingExtra="5dp"
                />

            <Button
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/pay_btn_bg"
                android:text="完成"
                android:textColor="@color/color_six"
                android:id="@+id/btn_ok"
                android:layout_marginBottom="15dp"
                />


        </LinearLayout>


    </RelativeLayout>

        <ScrollView
            android:id="@+id/layout_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pay_cancel_img"
                />

            <TextView
                android:id="@+id/tv_pay_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付取消"
                android:textSize="18sp"
                android:textColor="@color/color_six"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:gravity="center_horizontal"
                android:id="@+id/tv_info"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请在“我----我报名的活动”中继续完成支付。超过24小时未支付，报名将被拒绝，需要重新报名。如果您需要帮助，请联系010-53525135"
                />

            <Button
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/pay_btn_bg"
                android:text="我知道了"
                android:textColor="@color/color_six"
                android:id="@+id/btn_ok1"
                />


        </LinearLayout>
        </ScrollView>
    </FrameLayout>


</LinearLayout>