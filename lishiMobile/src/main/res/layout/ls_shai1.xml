<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    
  <LinearLayout
        android:id="@+id/layout_left"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/ls_shai_bg"
        android:orientation="vertical" >

        <com.lis99.mobile.entry.view.SlidingMenuView
            android:id="@+id/ls_slidingmenu_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/ls_shai_marginleft"
                        android:layout_marginTop="@dimen/ls_shai_margintop"
                        android:text="晒装备"
                        android:textColor="@color/white"
                        android:textSize="@dimen/ls_shai_text1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/ls_shai_marginleft"
                        android:layout_marginTop="10dp"
                        android:text="记录你户外生活的每一个瞬间"
                        android:textColor="@color/white"
                        android:textSize="@dimen/ls_shai_text2" />
                </LinearLayout>
            </com.lis99.mobile.entry.view.SlidingMenuView>
        </LinearLayout>
        <View
            android:id="@+id/ls_shai_ap_bg"
           android:layout_width="fill_parent"
            android:layout_height="fill_parent"
             />
   <LinearLayout
        android:id="@+id/layout_right"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:background="#00000000"
        android:orientation="vertical" >
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/rl_shai_title"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/ls_page_title_height"
                    android:background="@color/text_color_blue" 
                    android:visibility="invisible">

                    <ImageView
                        android:id="@+id/iv_back"
                        android:layout_width="@dimen/ls_page_home_width"
                        android:layout_height="@dimen/ls_page_home_height"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ls_page_back_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="晒装备"
                        android:textColor="@color/white"
                        android:textSize="22sp" />

                    <ImageView
                        android:id="@+id/iv_paizhao"
                        android:layout_width="@dimen/ls_page_home_width"
                        android:layout_height="@dimen/ls_page_home_height"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/ls_shai_marginright2"
                        android:background="@drawable/ls_shai_paizhao_icon" />

                    <ImageView
                        android:id="@+id/iv_shuaxin"
                        android:layout_width="@dimen/ls_page_home_width"
                        android:layout_height="@dimen/ls_page_home_height"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/ls_shai_marginright1"
                        android:background="@drawable/ls_shai_shuaxin_icon" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/ls_shaitu_content"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" 
                        android:gravity="center">

                         <com.lis99.mobile.entry.view.MyScrollLayout
                            android:id="@+id/ls_shaitu_scrollLayout"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center" 
                            >

                             <FrameLayout
                                android:id="@+id/ls_shai_fl1"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                 >

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:background="@color/white"
                                    android:orientation="vertical"
                                    android:padding="5dp" >
                                    
                                    

                                  <LinearLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1.0"
                                        android:orientation="horizontal" >

                                        <com.lis99.mobile.entry.view.AsyncLoadImageView
                                            android:id="@+id/ls_shaitu_iv1"
                                            android:layout_width="0dp"
                                            android:layout_height="fill_parent"
                                            android:layout_weight="1.0"
                                            android:scaleType="fitXY" />

                                        <View
                                            android:layout_width="5dp"
                                            android:layout_height="fill_parent"
                                            android:background="@color/white" />

                                        <com.lis99.mobile.entry.view.AsyncLoadImageView
                                            android:id="@+id/ls_shaitu_iv2"
                                            android:layout_width="0dp"
                                            android:layout_height="fill_parent"
                                            android:layout_weight="1.0"
                                            android:scaleType="fitXY" />

                                        <View
                                            android:layout_width="5dp"
                                            android:layout_height="fill_parent"
                                            android:background="@color/white" />

                                        <com.lis99.mobile.entry.view.AsyncLoadImageView
                                            android:id="@+id/ls_shaitu_iv3"
                                            android:layout_width="0dp"
                                            android:layout_height="fill_parent"
                                            android:layout_weight="1.0"
                                            android:scaleType="fitXY" />
                                    </LinearLayout>

                                    <View
                                        android:layout_width="fill_parent"
                                        android:layout_height="5dp"
                                        android:background="@color/white" />

                                    <LinearLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1.0"
                                        android:orientation="horizontal" >

                                        <com.lis99.mobile.entry.view.AsyncLoadImageView
                                            android:id="@+id/ls_shaitu_iv4"
                                            android:layout_width="0dp"
                                            android:layout_height="fill_parent"
                                            android:layout_weight="1.0"
                                            android:scaleType="fitXY" />

                                        <View
                                            android:layout_width="5dp"
                                            android:layout_height="fill_parent"
                                            android:background="@color/white" />

                                        <com.lis99.mobile.entry.view.AsyncLoadImageView
                                            android:id="@+id/ls_shaitu_iv5"
                                            android:layout_width="0dp"
                                            android:layout_height="fill_parent"
                                            android:layout_weight="1.0"
                                            android:scaleType="fitXY" />

                                        <View
                                            android:layout_width="5dp"
                                            android:layout_height="fill_parent"
                                            android:background="@color/white" />

                                        <com.lis99.mobile.entry.view.AsyncLoadImageView
                                            android:id="@+id/ls_shaitu_iv6"
                                            android:layout_width="0dp"
                                            android:layout_height="fill_parent"
                                            android:layout_weight="1.0"
                                            android:scaleType="fitXY" />
                                    </LinearLayout>

                                    <View
                                        android:layout_width="fill_parent"
                                        android:layout_height="5dp"
                                        android:background="@color/white" />

                                    <LinearLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1.0"
                                        android:orientation="horizontal" >

                                        <com.lis99.mobile.entry.view.AsyncLoadImageView
                                            android:id="@+id/ls_shaitu_iv7"
                                            android:layout_width="0dp"
                                            android:layout_height="fill_parent"
                                            android:layout_weight="1.0"
                                            android:scaleType="fitXY" />

                                        <View
                                            android:layout_width="5dp"
                                            android:layout_height="fill_parent"
                                            android:background="@color/white" />

                                        <com.lis99.mobile.entry.view.AsyncLoadImageView
                                            android:id="@+id/ls_shaitu_iv8"
                                            android:layout_width="0dp"
                                            android:layout_height="fill_parent"
                                            android:layout_weight="1.0"
                                            android:scaleType="fitXY" />

                                        <View
                                            android:layout_width="5dp"
                                            android:layout_height="fill_parent"
                                            android:background="@color/white" />

                                        <com.lis99.mobile.entry.view.AsyncLoadImageView
                                            android:id="@+id/ls_shaitu_iv9"
                                            android:layout_width="0dp"
                                            android:layout_height="fill_parent"
                                            android:layout_weight="1.0"
                                            android:scaleType="fitXY" />
                                    </LinearLayout> 
                                </LinearLayout>
                            </FrameLayout>

                            <FrameLayout
                                android:id="@+id/ls_shai_fl2"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent" >

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:background="@color/white"
                                    android:orientation="vertical"
                                    android:padding="5dp" >

                                    <LinearLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1.0"
                                        android:orientation="horizontal" >

                                        <com.lis99.mobile.entry.view.AsyncLoadImageView
                                            android:id="@+id/ls_shaitu_iv11"
                                            android:layout_width="0dp"
                                            android:layout_height="fill_parent"
                                            android:layout_weight="1.0"
                                            android:scaleType="fitXY" />

                                        <View
                                            android:layout_width="5dp"
                                            android:layout_height="fill_parent"
                                            android:background="@color/white" />

                                        <com.lis99.mobile.entry.view.AsyncLoadImageView
                                            android:id="@+id/ls_shaitu_iv12"
                                            android:layout_width="0dp"
                                            android:layout_height="fill_parent"
                                            android:layout_weight="1.0"
                                            android:scaleType="fitXY" />

                                        <View
                                            android:layout_width="5dp"
                                            android:layout_height="fill_parent"
                                            android:background="@color/white" />

                                        <com.lis99.mobile.entry.view.AsyncLoadImageView
                                            android:id="@+id/ls_shaitu_iv13"
                                            android:layout_width="0dp"
                                            android:layout_height="fill_parent"
                                            android:layout_weight="1.0"
                                            android:scaleType="fitXY" />
                                    </LinearLayout>

                                    <View
                                        android:layout_width="fill_parent"
                                        android:layout_height="5dp"
                                        android:background="@color/white" />

                                    <LinearLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1.0"
                                        android:orientation="horizontal" >

                                        <com.lis99.mobile.entry.view.AsyncLoadImageView
                                            android:id="@+id/ls_shaitu_iv14"
                                            android:layout_width="0dp"
                                            android:layout_height="fill_parent"
                                            android:layout_weight="1.0"
                                            android:scaleType="fitXY" />

                                        <View
                                            android:layout_width="5dp"
                                            android:layout_height="fill_parent"
                                            android:background="@color/white" />

                                        <com.lis99.mobile.entry.view.AsyncLoadImageView
                                            android:id="@+id/ls_shaitu_iv15"
                                            android:layout_width="0dp"
                                            android:layout_height="fill_parent"
                                            android:layout_weight="1.0"
                                            android:scaleType="fitXY" />

                                        <View
                                            android:layout_width="5dp"
                                            android:layout_height="fill_parent"
                                            android:background="@color/white" />

                                        <com.lis99.mobile.entry.view.AsyncLoadImageView
                                            android:id="@+id/ls_shaitu_iv16"
                                            android:layout_width="0dp"
                                            android:layout_height="fill_parent"
                                            android:layout_weight="1.0"
                                            android:scaleType="fitXY" />
                                    </LinearLayout>

                                    <View
                                        android:layout_width="fill_parent"
                                        android:layout_height="5dp"
                                        android:background="@color/white" />

                                    <LinearLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1.0"
                                        android:orientation="horizontal" >

                                        <com.lis99.mobile.entry.view.AsyncLoadImageView
                                            android:id="@+id/ls_shaitu_iv17"
                                            android:layout_width="0dp"
                                            android:layout_height="fill_parent"
                                            android:layout_weight="1.0"
                                            android:scaleType="fitXY" />

                                        <View
                                            android:layout_width="5dp"
                                            android:layout_height="fill_parent"
                                            android:background="@color/white" />

                                        <com.lis99.mobile.entry.view.AsyncLoadImageView
                                            android:id="@+id/ls_shaitu_iv18"
                                            android:layout_width="0dp"
                                            android:layout_height="fill_parent"
                                            android:layout_weight="1.0"
                                            android:scaleType="fitXY" />

                                        <View
                                            android:layout_width="5dp"
                                            android:layout_height="fill_parent"
                                            android:background="@color/white" />

                                        <com.lis99.mobile.entry.view.AsyncLoadImageView
                                            android:id="@+id/ls_shaitu_iv19"
                                            android:layout_width="0dp"
                                            android:layout_height="fill_parent"
                                            android:layout_weight="1.0"
                                            android:scaleType="fitXY" />
                                    </LinearLayout>
                                </LinearLayout>
                            </FrameLayout> 
                        </com.lis99.mobile.entry.view.MyScrollLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/ls_shaitu_scrollLayout"
                            android:layout_marginTop="20dp"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/ls_page_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1 / 2"
                                android:textColor="@color/white" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout> 
            </LinearLayout>
        </LinearLayout>
</RelativeLayout>
