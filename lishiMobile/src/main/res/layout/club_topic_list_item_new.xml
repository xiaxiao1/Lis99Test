<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:descendantFocusability="blocksDescendants"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <View
        android:id="@+id/topGapView"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/pull_bg"
        android:visibility="gone"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp">

        <com.lis99.mobile.club.widget.RoundedImageView
            android:id="@+id/roundedImageView1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:border_width="0px"
            android:layout_marginLeft="13dp"
            app:corner_radius="5dp"
            android:background="@color/pull_bg"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/vipStar"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_alignRight="@id/roundedImageView1"
            android:layout_alignBottom="@+id/roundedImageView1"
            android:layout_marginLeft="-8dp"
            android:src="@drawable/club_icon_v" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_six"
            android:textSize="12sp"
            android:text="Name"
            android:id="@+id/tv_name"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/roundedImageView1"
            android:layout_marginLeft="8dp"/>

        <Button
            style="@style/wrap_wrap"
            android:layout_alignParentRight="true"
            android:id="@+id/btn_concern"
            android:layout_marginRight="13dp"
            android:background="@drawable/friends_no_attention"
            android:layout_centerVertical="true"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_1px_stroke"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">


        <com.lis99.mobile.club.widget.RoundedImageView
            android:layout_width="fill_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="@color/pull_bg"
            android:id="@+id/iv_bg"
            app:corner_radius="0px"
            app:border_width="0px"
            />

        <ImageView
            android:layout_centerInParent="true"
            android:id="@+id/iv_load"
            android:src="@drawable/load_image_temp_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        >

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:id="@+id/layout_like"
            android:background="@drawable/choiceness_like_bg"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_like"
                android:src="@drawable/like_button"
                />

            <TextView
                android:layout_marginTop="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="8668"
                android:id="@+id/tv_like"
                android:maxLength="4"
                android:textColor="@color/color_nine"
                />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/layout_like"
            android:textSize="15sp"
            android:text="@string/temp_string_long"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginTop="20dp"
            android:id="@+id/tv_title"
            android:textColor="#73706e"
            />

        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_marginTop="2dp"
            android:id="@+id/tv_reply"
            android:textSize="12sp"
            android:text="1688则评论"
            android:textColor="@color/color_nine"
            />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_1px_stroke"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/pull_bg"
        />


</LinearLayout>
