<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
        android:background="@color/white"
             android:descendantFocusability="blocksDescendants"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

    <RelativeLayout
        android:layout_marginTop="16dp"
        android:layout_marginLeft="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:id="@+id/layout_user"
        >

        <com.lis99.mobile.club.widget.RoundedImageView
            android:id="@+id/roundedImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:src="@drawable/ls_nologin_header_icon"
            app:corner_radius="8dp"
            app:border_color="#e8e8e8"
            app:border_width="1px"
            />

        <ImageView
            android:id="@+id/vipStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/roundedImageView"
            android:layout_marginLeft="-8dp"
            android:layout_toRightOf="@+id/roundedImageView"
            android:src="@drawable/club_icon_v"
            android:visibility="visible" />


    </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="16dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/layout_user"

            >

            <TextView
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_blue"
                android:id="@+id/tv_name"
                android:text="@string/temp_string"
                />

            <TextView
                android:id="@+id/tv_actve"
                android:layout_toRightOf="@id/tv_name"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_nine"
                android:text="发布了一个活动"
                />

            <TextView
                android:layout_marginRight="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@id/tv_name"
                android:textSize="12sp"
                android:textColor="@color/color_nine"
                android:text="@string/temp_string"
                android:id="@+id/tv_time"
                />

            <TextView
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:id="@+id/tv_info"
                android:textColor="#444"
                android:text="@string/temp_string_long"
                android:layout_below="@id/tv_name"
                android:layout_marginTop="8dp"
                />

            <RelativeLayout
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_info_img"
                android:layout_below="@id/tv_info"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dynamic_item_title"
                    android:textSize="10sp"
                    android:textColor="#a99c7d"
                    android:text="@string/temp_string_long"
                    android:id="@+id/dynamic_item_title1"
                    android:lineSpacingExtra="3dp"
                    android:gravity="center"
                    android:maxLines="2"
                    android:ellipsize="end"
                    />

                <com.lis99.mobile.club.widget.RoundedImageView
                    android:layout_below="@id/dynamic_item_title1"
                    android:id="@+id/iv_info"
                    android:layout_width="fill_parent"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ls_nologin_header_icon"
                    app:corner_radius="3dp"
                    app:border_color="#e8e8e8"
                    app:border_width="1px"
                    />

                <TextView
                    android:lineSpacingExtra="3dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dynamic_item_title"
                    android:textSize="12sp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="#a99c7d"
                    android:text="@string/temp_string_long"
                    android:id="@+id/dynamic_item_title"
                    />



            </RelativeLayout>

            <ImageView
                android:layout_alignTop="@id/layout_info_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dynamic_tag"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="8dp"
                android:id="@+id/iv_active"
                />

            <RelativeLayout
                android:layout_marginRight="12dp"
                android:id="@+id/layout_bottom"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="12dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_info_img"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/dynamic_dot"
                    android:textColor="@color/color_nine"
                    android:textSize="12sp"
                    android:text="@string/temp_string"
                    android:id="@+id/tv_club"
                    android:drawablePadding="5dp"
                    />

                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_nine"
                    android:textSize="12sp"
                    android:text="9999"
                    android:drawableLeft="@drawable/dynamic_reply"
                    android:drawablePadding="5dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/tv_reply"
                    />

                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_nine"
                    android:textSize="12sp"
                    android:text="9999"
                    android:drawableLeft="@drawable/dynamic_style"
                    android:drawablePadding="5dp"
                    android:id="@+id/tv_style"
                    android:layout_toLeftOf="@id/tv_reply"
                    android:layout_marginRight="10dp"
                    />

                

            </RelativeLayout>

            <View
                android:layout_marginTop="10dp"
                android:layout_below="@id/layout_bottom"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_alignLeft="@id/layout_bottom"
                android:background="#eee"
                />

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>