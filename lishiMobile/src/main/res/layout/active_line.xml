<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <RelativeLayout
                    android:id="@+id/titlehead"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_height"
                    android:background="@drawable/title_bar_bg" >

        <RelativeLayout
            android:id="@+id/titleLeft"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            >

            <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/titleLeftImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/active_line_message"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="11dp"
                android:minWidth="11dp"
                android:maxWidth="18dp"
                android:layout_alignRight="@id/titleLeftImage"
                android:layout_alignTop="@id/titleLeftImage"
                android:layout_marginTop="-4dp"
                android:layout_marginRight="-4dp"
                android:textSize="5sp"
                android:text="233"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/active_line_red_dot"
                android:id="@+id/tv_massage"
                />



        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/titleRight"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                >

                <ImageView
                    android:id="@+id/titleRightImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/active_line_location"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/text_color_black"
                    android:text="北京"
                    android:textSize="12sp"
                    android:id="@+id/tv_location"
                    />

            </LinearLayout>


        </RelativeLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/titleRight"
            android:layout_toRightOf="@+id/titleLeft"
            android:gravity="center"
            android:textColor="@color/title_bar_text"
            android:textSize="@dimen/title_text_height"
            android:text="线路活动"
            />

    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/listViewStyle"
        android:divider="@null"
        android:dividerHeight="0px"
        android:id="@+id/list"
        />


</LinearLayout>