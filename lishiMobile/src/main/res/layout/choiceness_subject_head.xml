<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/pull_bg"
    android:orientation="vertical"
     >

    <RelativeLayout style="@style/fill_wrap" >

        <com.lis99.mobile.club.widget.RoundedImageView
            android:id="@+id/iv_bg"
            android:layout_width="match_parent"
            android:layout_height="180dip"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:border_width="0px"
            app:corner_radius="0dip" />

        <com.lis99.mobile.club.widget.RoundedImageView
            android:layout_width="match_parent"
            android:layout_height="180dip"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:border_width="0px"
            app:corner_radius="0dip"
            android:background="@drawable/choiceness_subject_forground"
            />

        <LinearLayout
            style="@style/fill_wrap"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginRight="@dimen/ten"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_title"
                style="@style/fill_wrap"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/temp_string"
                android:textColor="@color/white"
                android:textSize="22sp"
	        android:shadowColor="@color/color_shadow"
	        android:shadowDx="2"
	        android:shadowDy="2"
	        android:shadowRadius="5" />

            <TextView
                android:id="@+id/tv_info"
                style="@style/fill_wrap"
                android:layout_below="@id/tv_title"
                android:layout_marginTop="6dip"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/temp_string_long"
                android:textColor="@color/white"
                android:textSize="12sp"
	        android:shadowColor="@color/color_shadow"
	        android:shadowDx="2"
	        android:shadowDy="2"
	        android:shadowRadius="5" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        style="@style/fill_wrap"
        android:orientation="vertical"
        android:padding="5dip" 
        android:background="@drawable/subject_text_bg"
        >
        
        <LinearLayout 
            style="@style/fill_wrap"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dip"
            >
            
            <ImageView
            style="@style/wrap_wrap"
            android:layout_gravity="center_vertical"
            android:background="@drawable/subject_center_line" />
            
            <ImageView
            style="@style/wrap_wrap"
            android:background="@drawable/subject_title_center" 
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            />
            
            <ImageView
            style="@style/wrap_wrap"
            android:layout_gravity="center_vertical"
            android:background="@drawable/subject_center_line" />
            
        </LinearLayout>

        

        <TextView
            android:id="@+id/tv_describe"
            style="@style/fill_wrap"
            android:layout_marginTop="5dip"
            android:text="@string/temp_string_long"
            android:textColor="@color/color_six"
            android:textSize="12sp"
            android:lineSpacingExtra="5dip"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:paddingBottom="5dip"
            
            />
    </LinearLayout>

</LinearLayout>