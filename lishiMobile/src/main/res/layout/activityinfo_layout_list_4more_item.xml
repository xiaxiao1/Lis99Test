<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/fullinfo_item_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="ggbgb"
        android:textSize="14sp"
        android:textColor="#525252"
        android:visibility="visible"
        />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            >
    <RelativeLayout
        android:id="@+id/main_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
            <ImageView
                android:id="@+id/fullinfo_item_img"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_centerInParent="true"
                android:src="@drawable/club_topic_default"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:visibility="visible"
                />
            <ImageView
                android:id="@+id/fullinfo_item_load_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/load_image_temp_bg"
                android:visibility="visible"

                />
        </RelativeLayout>
            <RelativeLayout
                android:id="@+id/fullinfo_item_show_more_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_rl"
                android:layout_marginTop="-200dp"
                >
                <ImageView
                    android:id="@+id/jianbian_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/jianbian"

                    />
                <TextView
                    android:id="@+id/fullinfo_item_showmore_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="展开更多"
                    android:textSize="14sp"
                    android:textColor="#3ac01a"
                    android:gravity="center"
                    android:background="@drawable/more"
                    android:layout_below="@id/jianbian_img"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-60dp"
                    />
            </RelativeLayout>
</RelativeLayout>

