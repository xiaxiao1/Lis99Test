<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

     <RelativeLayout
        android:id="@+id/titleBar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/ls_page_title_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/text_color_blue" >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="30dp"
            android:layout_height="@dimen/ls_page_home_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ls_page_back_icon"
            android:scaleType="center"
            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="装备分类"
            android:textColor="@color/white"
            android:textSize="18sp" />

       
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/titleBar"
        android:paddingBottom="8dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="7dp" >

        <TextView
            android:id="@+id/lsBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/activity_leftbtn_sel"
            android:gravity="center"
            android:text="装备类型"
            android:textColor="#fff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/lineBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/activity_rightbtn"
            android:gravity="center"
            android:text="运动方式"
            android:textColor="@color/text_color_blue"
            android:textSize="14sp" />
    </LinearLayout>

    <ExpandableListView
        android:id="@+id/expandableListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:groupIndicator="@null"
        android:background="#ffffff"
        android:divider="#d7d7d7"
        android:dividerHeight="1dp"
        android:childDivider="#d7d7d7"
        android:cacheColorHint="#00000000"
        android:listSelector="#00000000" 
        android:layout_below="@+id/linearLayout1">
    </ExpandableListView>

</RelativeLayout>
