<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/pull_bg"
              android:orientation="vertical"
    >

    <com.lis99.mobile.club.widget.BannerView
        android:id="@+id/viewBanner"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:visibility="gone"
        />

    <View
        style="@style/fill_wrap"
        android:layout_height="8dip"
        android:background="@color/pull_bg" />

    <View
        style="@style/fill_wrap"
        android:layout_height="1px"
        android:background="@color/color_1px_stroke" />

    <LinearLayout
        style="@style/fill_wrap"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dp"
        >

        <LinearLayout
            android:layout_marginTop="2dp"
            android:id="@+id/layout_club_level"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_marginLeft="4dp"
                style="@style/wrap_wrap"
                android:background="@drawable/banner1"
                />

            <TextView
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="俱乐部排行"
                android:textColor="@color/color_six"
                android:textSize="11sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="2dp"
            android:id="@+id/layout_leader_level"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                style="@style/wrap_wrap"
                android:background="@drawable/banner2"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="领队排行"
                android:textColor="@color/color_six"
                android:textSize="11sp"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="2dp"
            android:id="@+id/layout_hot_topic"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                style="@style/wrap_wrap"
                android:background="@drawable/banner3"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="最新热帖"
                android:textColor="@color/color_six"
                android:textSize="11sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="2dp"
            android:id="@+id/layout_lis_special"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                style="@style/wrap_wrap"
                android:background="@drawable/choiceness_head_active"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="线路活动"
                android:textColor="@color/color_six"
                android:textSize="11sp"
                />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/color_1px_stroke"
        />

    <ImageView
        style="@style/wrap_wrap"
        android:layout_height="34dip"
        android:layout_gravity="center"
        android:src="@drawable/myaddclub"
        />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/color_1px_stroke"
        />

</LinearLayout>