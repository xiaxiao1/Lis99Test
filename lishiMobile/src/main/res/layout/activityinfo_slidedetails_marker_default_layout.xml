<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="#f7f3ec"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:background="#e3dbd0"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#e3dbd0"/>

    <TextView
        android:id="@+id/shanglachankantuwen_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="18dp"
        android:text="上拉查看图文详情"
        android:textColor="#525252"
        android:layout_centerInParent="true"
        android:textSize="14dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/shanglachankantuwen_tv"
        android:background="#e3dbd0"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/shanglachankantuwen_tv"
        android:background="#e3dbd0"/>
</RelativeLayout>





</LinearLayout>
