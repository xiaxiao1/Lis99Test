<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/ls_page_title_height" >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="50dip"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/blue_break"
            android:scaleType="center"
            />

        

        <TextView
            android:id="@+id/ls_regist_bt"
            style="@style/wrap_wrap"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_marginRight="18dip"
            android:text="注册"
            android:textSize="@dimen/text_large"
            android:textColor="@color/text_color_blue" />
    </RelativeLayout>
    
    <ImageView
        android:layout_marginTop="20dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/login_title"
        android:layout_gravity="center_horizontal"
        />

    <Button
        android:id="@+id/ls_login_bt"
        android:layout_width="225dp"
        android:layout_marginTop="38dip"
        android:background="@drawable/login_btn"
        android:layout_height="@dimen/ls_regist_bt_height"
        android:layout_gravity="center_horizontal"
        android:text="使用手机号登录"
        android:textSize="16sp"
        android:textColor="@color/white" />
    
    
    
    <RelativeLayout
        android:id="@+id/ls_wx_login_bt"
        android:layout_width="225dp"
        android:layout_marginTop="15dip"
        android:background="@drawable/green_boder_button_bg"
        android:layout_height="@dimen/ls_regist_bt_height"
        android:layout_gravity="center_horizontal"
        >
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="使用微信登录"
        android:textSize="16sp"
        android:gravity="center"
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/icon_wechat_small"
        android:textColor="@color/text_color_blue" />
        
        </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        >
        
        <LinearLayout 
            android:id="@+id/layout_other_login"
            style="@style/fill_wrap"
            android:orientation="horizontal"
            android:layout_marginBottom="20dip"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:layout_alignParentBottom="true"
            >
            
            <TextView 
                android:id="@+id/ls_ll_sina_login"
                style="@style/fill_wrap"
                android:layout_weight="1"
                android:drawableTop="@drawable/login_sina"
                android:textColor="@color/white"
                android:text="新浪微博"
                android:drawablePadding="5dip"
                android:gravity="center_horizontal"
                />
            
            <TextView 
                android:id="@+id/ls_ll_qq_login"
                style="@style/fill_wrap"
                android:layout_weight="1"
                android:drawableTop="@drawable/login_qq"
                android:textColor="@color/white"
                android:text="QQ"
                android:drawablePadding="5dip"
                android:gravity="center_horizontal"
                />
            
            <TextView 
                android:id="@+id/ls_email_login"
                style="@style/fill_wrap"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_login_email"
                android:textColor="@color/white"
                android:text="邮箱"
                android:drawablePadding="5dip"
                android:gravity="center_horizontal"
                />
            
        </LinearLayout>
        
        <ImageView 
            android:layout_above="@id/layout_other_login"
            style="@style/wrap_wrap"
            android:src="@drawable/login_more_title"
            android:layout_marginBottom="8dip"
            android:layout_centerHorizontal="true"
            />
        
    </RelativeLayout>

</LinearLayout>