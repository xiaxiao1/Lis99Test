<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app = "http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
>

    <LinearLayout android:layout_width="200dp" android:layout_height="wrap_content"
        android:orientation="vertical"
                  android:paddingRight="15dp"
    >

    <com.lis99.mobile.club.widget.RoundedImageView
        android:layout_centerVertical="true"
        android:id="@+id/roundedImageView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/ls_nologin_header_icon"
        android:scaleType="fitXY"
        app:corner_radius="4dp"
        app:border_color="#e8e8e8"
        app:border_width="1px"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="110dp"
                  android:background="@drawable/supper_leader_bg"
                  android:layout_marginTop="-3dp"
                  android:orientation="vertical"
                  android:gravity="center_horizontal"
    >


        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textColor="@color/text_color_black"
                  android:textSize="15sp"
                  android:layout_centerHorizontal="true"
                    android:paddingTop="10dp"
                  android:id="@+id/title"
                  android:text="@string/temp_string"
        />

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:id="@+id/tag"
                  android:background="@drawable/supper_leader_tag_bg"
                  android:layout_below="@id/title"
                  android:layout_marginTop="10dp"
                  android:layout_centerHorizontal="true"
                  android:textSize="@dimen/text_small"
                  android:textColor="#c8bdaa"
                  android:text="@string/temp_string"
                  android:gravity="center"

        />

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:paddingTop="10dp"
            android:textColor="@color/color_nine"
                  android:textSize="@dimen/text_small"
                  android:text="@string/temp_string_long"
                  android:maxLines="2"
                  android:paddingBottom="10dp"
                  android:paddingRight="10dp"
                  android:paddingLeft="10dp"
                  android:lineSpacingExtra="3dp"
                  android:id="@+id/content"
        />


    </LinearLayout>
    </LinearLayout>

</LinearLayout>