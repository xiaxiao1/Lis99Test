<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="70dp"
    android:background="#00000000"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="35dp"
        android:background="#55000000"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginLeft="50dp"
            android:layout_weight="5.0"
            android:orientation="vertical" >
            <TextView 
                android:id="@+id/nickname"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张晓光" 
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/ls_color_2acbc2"/>
            <TextView 
                android:id="@+id/title"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="砾石网认证户外达人" 
                android:textColor="@color/white"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="3.0"
            android:padding="15dp"
            android:gravity="center" >

            <TextView
                android:id="@+id/bt_tiwen"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="提问" 
                android:textSize="18sp"
                android:background="@drawable/ls_daren_tiwen_bt"
                android:textColor="@color/white"/>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/ls_daren_head_bg"
        android:gravity="center" >

        <com.lis99.mobile.entry.view.AsyncLoadImageView
            android:id="@+id/iv_head"
            android:layout_width="65dp"
            android:layout_height="65dp" />
    </RelativeLayout>

</RelativeLayout>