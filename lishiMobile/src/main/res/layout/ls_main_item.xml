<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ls_main_bg_item"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ls_menu_item"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/ls_main_item_height"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ls_menu_item_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ls_xihuan_icon" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/ls_main_item_height"
            android:layout_marginLeft="5dip"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                 >

                <TextView
                    android:id="@+id/ls_menu_item_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="喜欢的装备"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/ls_menu_item_tv_sp" />
                <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dip"
                    android:background="@drawable/ls_second_main_arrow"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0.8dip"
                android:layout_alignParentBottom="true"
                android:background="#66000000" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/ls_setting_bt"
        android:layout_width="@dimen/ls_setting_bt_width"
        android:layout_height="@dimen/ls_setting_bt_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/ls_setting_bt_top"
        android:background="@drawable/ls_setting_icon"
        android:clickable="true"
        android:text="设置"
        android:textColor="@color/white"
        android:visibility="gone" >
    </Button>

</LinearLayout>