<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/layout_club_name"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:background="@color/pull_bg">


            <ImageView
                android:id="@+id/rightArrowView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/topic_right_arrow" />

            <TextView
                android:id="@+id/tv_club_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/rightArrowView"
                android:text="@string/temp_string"
                android:textColor="#b59477"
                android:textSize="12sp" />

        </RelativeLayout>

        <View
            style="@style/fill_wrap"
            android:layout_height="1px"
            android:background="@color/color_1px_stroke" />


    </LinearLayout>


    <TextView
        android:id="@+id/titleView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="23dp"
        android:ellipsize="end"
        android:lineSpacingExtra="10dp"
        android:maxLines="2"
        android:text="@string/temp_string_long"
        android:textColor="#525252"
        android:textSize="22sp" />


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="14dp"
        android:background="#fff">

        <com.lis99.mobile.club.widget.RoundedImageView
            android:id="@+id/roundedImageView1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/ls_nologin_header_icon"
            app:border_color="#eee"
            app:border_width="1px"
            app:corner_radius="20dp" />

        <TextView
            android:id="@+id/nameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/roundedImageView1"
            android:gravity="top"
            android:singleLine="true"
            android:text="@string/temp_string"
            android:textColor="#666"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/vipStar"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_alignBottom="@+id/roundedImageView1"
            android:layout_alignRight="@id/roundedImageView1"
            android:layout_marginLeft="-8dp"
            android:src="@drawable/club_icon_v" />


        <RelativeLayout
            android:id="@+id/specialPanel"
            android:layout_width="47dp"
            android:layout_height="37dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/topic_special_bg">

            <TextView
                android:id="@+id/specialTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="精品游记"
                android:layout_centerInParent="true"
                android:paddingTop="1dp"
                android:textSize="9sp"
                android:textColor="#fff"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/nameView"
            android:layout_marginBottom="2dp"
            android:layout_toRightOf="@+id/nameView"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/iv_tag_floor"
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:layout_marginLeft="4dp"
                android:gravity="center"
                android:text="楼主"
                android:background="@drawable/topic_new_bg_host"
                android:textColor="@color/white"
                android:textSize="9sp"

                />

            <TextView
                android:id="@+id/iv_moderator"
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:layout_marginLeft="4dp"
                android:gravity="center"
                android:text="版主"
                android:textColor="@color/white"
                android:textSize="9sp"
                android:background="@drawable/topic_new_bg_moderator"
                />

            <TextView
                android:id="@+id/tv_user_tag3"
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:layout_marginLeft="4dp"
                android:background="@drawable/topic_supper_tag3"
                android:gravity="center"
                android:text="人要地人地要在"
                android:textColor="@color/white"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/tv_user_tag4"
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:layout_marginLeft="4dp"
                android:background="@drawable/topic_supper_tag4"
                android:gravity="center"
                android:text="人要地人地要在"
                android:textColor="@color/white"
                android:textSize="9sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/dateView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/nameView"
            android:layout_below="@+id/nameView"
            android:layout_marginTop="5dp"
            android:drawablePadding="5dp"
            android:text="@string/temp_string"
            android:textColor="@color/color_nine"
            android:textSize="11sp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/destinationPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/topic_destination_bg" />

        <ImageView
            android:id="@+id/destinationButtonBg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/topic_destination_button_bg" />

        <TextView
            android:id="@+id/destinationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/topic_destination_loc"
            android:drawablePadding="7dp"
            android:text="西藏"
            android:textColor="#3ac01a"
            android:textSize="11sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/destinationButtonBg"
            android:layout_centerVertical="true"
            android:layout_marginRight="9dp"
            android:src="@drawable/topic_destination_arrow" />


    </RelativeLayout>


</LinearLayout>