<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DPCWActivity" >
	<RelativeLayout
    		android:id="@+id/rl_title"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/ls_page_title_height"
            android:layout_marginBottom="20dip"
            android:background="@color/text_color_blue" >

           <TextView
                android:id="@+id/iv_home"
                android:layout_width="@dimen/ls_page_home_width"
                android:layout_height="@dimen/ls_page_home_height"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:text="取消" />
			<LinearLayout 
			    android:orientation="horizontal"
			    android:layout_width="wrap_content"
			    android:layout_centerInParent="true"
			    android:gravity="center"
			    android:layout_height="fill_parent">
			    	
			    <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="编辑商铺信息"
                android:textSize="20sp"
                android:textColor="@color/white" />
			</LinearLayout>

			<TextView
			    android:id="@+id/tv_tj"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentRight="true"
			    android:layout_centerVertical="true"
			    android:textColor="@color/white"
			    android:textSize="16sp"
			    android:layout_marginRight="10dip"
			    android:text="提交" />

        </RelativeLayout>

	<ImageView
	    android:id="@+id/imageView1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:src="@drawable/hwd_updown_line" />
	<LinearLayout 
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_margin="20dip"
	    android:layout_height="wrap_content">

		<TextView
		    android:textColor="@color/dark_gray"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="名称" />

		<EditText
		    android:id="@+id/et_mc"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:layout_marginLeft="20dip"
		    android:hint="人山魂"
		    android:background="@null"
		    android:ems="10" >
			
		</EditText>
	    
	</LinearLayout>
	<ImageView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:src="@drawable/hwd_updown_line" />
	<LinearLayout 
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_margin="20dip"
	    android:layout_height="wrap_content">

		<TextView
		    android:textColor="@color/dark_gray"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="地区" />

		<EditText
		    android:id="@+id/et_dq"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:layout_marginLeft="20dip"
		    android:hint="地址"
		    android:background="@null"
		    android:ems="10" >
			
		</EditText>
	    
	</LinearLayout>
	<ImageView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:src="@drawable/hwd_updown_line" />
	<LinearLayout 
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_margin="20dip"
	    android:layout_height="wrap_content">

		<TextView
		    android:textColor="@color/dark_gray"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="地址" />

		<EditText
		    android:id="@+id/et_dz"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:layout_marginLeft="20dip"
		    android:hint="02555"
		    android:background="@null"
		    android:ems="10" >
			
		</EditText>
	    
	</LinearLayout>
	<ImageView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:src="@drawable/hwd_updown_line" />
	<LinearLayout 
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_margin="20dip"
	    android:layout_height="wrap_content">

		<TextView
		    android:textColor="@color/dark_gray"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="电话" />

		<EditText
		    android:id="@+id/ed_ph"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:layout_marginLeft="20dip"
		    android:hint="0222"
		    android:background="@null"
		    android:ems="10" >
			
		</EditText>
	    
	</LinearLayout>

</LinearLayout>