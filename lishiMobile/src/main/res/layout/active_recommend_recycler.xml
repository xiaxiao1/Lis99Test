<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app = "http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="340dp"
        android:layout_height="260dp"
        android:paddingRight="15dp"
    >

    <com.lis99.mobile.club.widget.RoundedImageView
        android:layout_centerVertical="true"
        android:id="@+id/roundedImageView"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/ls_nologin_header_icon"
        android:scaleType="fitXY"
        app:corner_radius="5dp"
        app:border_color="#e8e8e8"
        app:border_width="1px"/>


    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:maxLines="1"
              android:ellipsize="end"
              android:textColor="@color/text_color_black"
              android:id="@+id/title"
              android:text="@string/temp_string_long"
              android:paddingTop="10dp"
    />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:maxLines="1"
                  android:ellipsize="end"
                  android:textColor="@color/color_nine"
                  android:textSize="@dimen/text_small"
                  android:id="@+id/content"
                  android:text="@string/temp_string_long"
                  android:paddingBottom="10dp"
                  android:paddingTop="3dp"
        />

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
    >

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:textSize="20sp"
                  android:textColor="#ff7800"
                  android:text="215"
                  android:id="@+id/price"
        />

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/tv_nikeName"
                  android:textSize="@dimen/text_small"
                  android:textColor="@color/color_nine"
                  android:text="元/起"
                  android:paddingLeft="10dp"
                  android:layout_gravity="bottom"
                  android:paddingBottom="2dp"
        />

    </LinearLayout>
    </LinearLayout>

</LinearLayout>