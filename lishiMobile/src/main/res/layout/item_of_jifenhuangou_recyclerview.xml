<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="146dp"
              android:layout_height="wrap_content"
    >

    <LinearLayout
        android:id="@+id/goods_left_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <ImageView
        android:id="@+id/goods_img"
        android:layout_width="136dp"
        android:layout_height="136dp"
        android:scaleType="centerInside"
        android:layout_gravity="center_horizontal"
        />
    </LinearLayout>
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_gravity="center_horizontal"
        >
        <LinearLayout
            android:id="@+id/goods_left_ll2"
            android:layout_width="132dp"
            android:layout_height="90dp"

            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            >
            <TextView
                android:id="@+id/goods_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:text=""
                android:textColor="#525252"
                android:textSize="13sp"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/goods_jifen_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="9dp"
                android:text=""
                android:textColor="#ff7800"
                android:textSize="13sp"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/goods_duihuan_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:text="兑换"
                android:textColor="#3ac01a"
                android:textSize="12sp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/cancle_press"
                />

            </LinearLayout>

        <View
            android:id="@+id/goods_fengexian_v"
            android:layout_width="0.5dp"
            android:layout_height="90dp"
            android:background="@color/color_eee"
            android:layout_alignParentRight="true"

            />
        </RelativeLayout>

    <!--<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#000000"
            android:layout_weight="2"
            />
        <View
            android:layout_width="0.5dp"
            android:layout_height="79dp"
            android:background="@color/color_eee"

            />
    </LinearLayout>-->
</LinearLayout>