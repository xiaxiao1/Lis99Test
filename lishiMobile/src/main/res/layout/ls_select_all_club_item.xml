<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@color/pull_bg"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/topSep"
        android:layout_width="match_parent"
        android:layout_height="3dp"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:orientation="horizontal"
        android:paddingLeft="7dp"
        android:paddingRight="7dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/normal_bg"
            android:id="@+id/clubCard">

            <com.lis99.mobile.club.widget.RoundedImageView
                android:layout_centerVertical="true"
                android:id="@+id/roundedImageView1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/club_icon_header_default"
                android:scaleType="fitXY"
                app:corner_radius="20dp"
                android:layout_marginLeft="17dp"
                app:border_color="#e9e3da"
                app:border_width="1px"/>

            <TextView
                android:id="@+id/titleView"
                android:layout_width="match_parent"
                android:layout_marginRight="3dp"
                android:layout_height="wrap_content"
                android:textColor="#525252"
                android:textSize="15sp"
                android:text="砾石俱乐部"
                android:singleLine="true"
                android:layout_marginTop="23dp"
                android:layout_toRightOf="@+id/roundedImageView1"
                android:layout_marginLeft="17dp"
                />

            <TextView
                android:visibility="gone"
                android:id="@+id/memberView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:textSize="9sp"
                android:text="1234人参与"
                android:layout_below="@+id/titleView"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@+id/roundedImageView1"
                android:layout_marginLeft="17dp"
                />

            <TextView
                android:id="@+id/topicNumView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:textSize="9sp"
                android:text="1567个话题"
                android:layout_below="@+id/titleView"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/roundedImageView1"
                android:layout_marginLeft="17dp"
                />



        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/normal_bg"
            android:id="@+id/clubCard2"
            android:layout_marginLeft="7dp">

            <com.lis99.mobile.club.widget.RoundedImageView
                android:layout_centerVertical="true"
                android:id="@+id/roundedImageView2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/club_icon_header_default"
                android:scaleType="fitXY"
                app:corner_radius="20dp"
                android:layout_marginLeft="17dp"
                app:border_color="#e9e3da"
                app:border_width="1px"/>

            <TextView
                android:id="@+id/titleView2"
                android:layout_width="match_parent"
                android:layout_marginRight="3dp"
                android:layout_height="wrap_content"
                android:textColor="#525252"
                android:textSize="15sp"
                android:text="砾石俱乐部"
                android:singleLine="true"

                android:layout_marginTop="23dp"
                android:layout_toRightOf="@+id/roundedImageView2"
                android:layout_marginLeft="17dp"
                />

            <TextView
                android:visibility="gone"
                android:id="@+id/memberView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:textSize="9sp"
                android:text="1234人参与"
                android:layout_below="@+id/titleView2"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/roundedImageView2"
                android:layout_marginLeft="17dp"
                />

            <TextView
                android:id="@+id/topicNumView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:textSize="9sp"
                android:text="1567个话题"
                android:layout_below="@+id/titleView2"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/roundedImageView2"
                android:layout_marginLeft="17dp"
                />



        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/bottomSep"
        android:layout_width="match_parent"
        android:layout_height="13dp"/>

    <ImageView
        android:id="@+id/sepLine"
        android:layout_width="match_parent"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_height="1dp"
        android:layout_below="@+id/bodyView"
        android:src="@drawable/club_group_sepline"
        />

</LinearLayout>
