<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/pull_bg" >

    <RelativeLayout
        style="@style/fill_wrap"
        android:padding="5dip" >

        <com.lis99.mobile.club.widget.RoundedImageView
            android:id="@+id/iv_bg"
            android:layout_width="match_parent"
            android:layout_height="120dip"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:border_width="0px"
            app:corner_radius="3dip" />
        
        <com.lis99.mobile.club.widget.RoundedImageView
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:src="@drawable/shadow_top" 
                android:scaleType="fitXY"
                app:corner_radius="3dip"
                />

        <ImageView
            android:id="@+id/iv_load"
            android:layout_marginTop="60dip"
            android:layout_centerHorizontal="true"
            android:src="@drawable/load_image_temp_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/active_all_text_bg"
            android:layout_below="@id/iv_bg"
            android:layout_marginTop="-4dip"
            android:id="@+id/relativelayout_example"
            >

            <TextView
                android:id="@+id/tv_title"
                style="@style/fill_wrap"
                android:ellipsize="end"
                android:paddingLeft="6dip"
                android:paddingRight="10dip"
                android:paddingTop="6dip"
                android:maxLines="2"
                android:text="@string/temp_string_long"
                android:textColor="#666666"
                android:textSize="13sp"
                android:minLines="2"
                android:layout_marginRight="80dip"
                android:gravity="center_vertical"
                android:lineSpacingExtra="5dp"
                />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearlayout"
            android:layout_width="76dip"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignRight="@id/relativelayout_example"
            android:layout_alignTop="@id/relativelayout_example"
            android:layout_marginTop="-20dip"
            android:gravity="center"
            >

            <com.lis99.mobile.club.widget.RoundedImageView
                android:id="@+id/roundedImageView1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/club_icon_header_default"
                app:corner_radius="28dp"
                app:border_color="@color/white"
                app:border_width="4px"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_club_name"
                android:layout_below="@id/roundedImageView1"
                android:text="@string/temp_string_long"
                android:textColor="@color/text_color_blue"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="12sp"
                android:layout_marginTop="5dip"
                />

        </LinearLayout>


        <View
            android:layout_width="1px"
            android:layout_height="20dip"
            android:background="#eee"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/linearlayout"
            android:layout_alignBottom="@id/linearlayout"
            android:layout_marginRight="5dp"
            />


        <RelativeLayout
            style="@style/fill_wrap"
            android:layout_height="60dip" >

            <TextView
                android:id="@+id/tv_data"
                style="@style/wrap_wrap"
                android:layout_margin="8dip"
                android:drawableLeft="@drawable/club_active_date"
                android:drawablePadding="4dip"
                android:text="@string/temp_string"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="12sp"
                android:shadowColor="@color/color_shadow"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="5"
                />

            <TextView
                android:id="@+id/tv_type"
                style="@style/wrap_wrap"
                android:layout_below="@id/tv_data"
                android:layout_marginLeft="8dip"
                android:drawableLeft="@drawable/club_active_type"
                android:drawablePadding="4dip"
                android:text="@string/temp_string"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>