<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/pull_bg"
              android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/my_sys_massage_bt"
        android:orientation="vertical"
        android:padding="10dp"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <com.lis99.mobile.club.widget.RoundedImageView
                android:id="@+id/roundedImageView1"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:scaleType="fitXY"
                android:src="@drawable/club_icon_header_default"
                app:border_color="#eeeeee"
                app:border_width="1px"
                app:corner_radius="28dp"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/tv_club_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/temp_string"
                    android:textColor="@color/text_color_blue"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/temp_string"
                    android:textColor="@color/color_nine"
                    android:textSize="12sp"
                    android:id="@+id/tv_data"
                    />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="你的帖子被加为精华。"
            android:textColor="#73706e"
            android:id="@+id/tv_info_title"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center"
                android:background="@drawable/sys_massage_info_bg"
                android:paddingTop="14dp"
                android:id="@+id/tv_info"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/temp_string_long"
                android:textColor="#c6b6a7"
                android:lineSpacingExtra="5dp"
                android:maxLines="2"
                android:ellipsize="end"
                />

        </RelativeLayout>

    </LinearLayout>



</LinearLayout>