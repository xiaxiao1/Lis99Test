<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:id="@+id/main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/title_bar_bg"
        >

        <RelativeLayout
            android:id="@+id/titleLeft"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            >

            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:id="@+id/titleLeftImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/active_line_message"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/titleLeftImage"
                android:layout_alignTop="@id/titleLeftImage"
                android:layout_marginTop="-4dp"
                android:layout_marginRight="-4dp"
                android:textSize="0sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/icon_reddot"
                android:id="@+id/tv_massage"
                />



        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/titleRight"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            >

            <ImageView
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:id="@+id/titleRightImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/new_topic_icon"
                />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            >

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            >

            <Button
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="发现"
                android:id="@+id/tab_choiceness"
                android:background="@null"
                android:textColor="@color/text_color_green"
                android:textSize="16sp"
                />

            <View
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_alignParentBottom="true"
                android:id="@+id/view_choiceness"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="#3ac01a"
                />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            >

            <Button
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="讨论区"
                android:id="@+id/tab_Dynamic"
                android:background="@null"
                android:textColor="@color/color_nine"
                android:textSize="16sp"
                />

            <View
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_alignParentBottom="true"
                android:id="@+id/view_dynamic"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="#3ac01a"
                />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            >

            <Button
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="关注"
                android:id="@+id/tab_column"
                android:background="@null"
                android:textColor="@color/color_nine"
                android:textSize="16sp"
                />

            <View
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_alignParentBottom="true"
                android:id="@+id/view_column"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="#3ac01a"
                />

        </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>


    <android.support.v4.view.ViewPager
        style="@style/fill_fill"
        android:id="@+id/viewPager"
        />



</LinearLayout>